<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".MealActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Linear_layout">

        <TextView
            android:id="@+id/meal_name_text"
            android:layout_marginTop="50dp"
            android:text="@string/add_meal_name"
            style="@style/Text"/>

        <EditText
            android:id="@+id/meal_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"

            android:ems="10"
            android:inputType="textPersonName"
            android:importantForAutofill="no"

            android:text=""
            android:hint="@string/meal_name_hint"
            style="@style/Input_Text"/>

        <TextView
            android:id="@+id/add_meal_info"
            android:layout_marginTop="10dp"
            android:text="@string/add_meal_info"
            style="@style/Macros"/>

        <TextView
            android:id="@+id/meal_calories_text"
            android:layout_marginTop="20dp"
            android:text="@string/calories"
            style="@style/Macros"/>

        <EditText
            android:id="@+id/meal_calories"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"

            android:ems="10"
            android:inputType="number"
            android:importantForAutofill="no"

            android:hint="@string/default_value"
            style="@style/Input_Text"/>

        <TextView
            android:id="@+id/meal_proteins_text"
            android:layout_marginTop="10dp"
            android:text="@string/proteins"
            style="@style/Macros"/>

        <EditText
            android:id="@+id/meal_proteins"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"

            android:ems="10"
            android:inputType="number"
            android:importantForAutofill="no"

            android:hint="@string/default_value"
            style="@style/Input_Text"/>

        <TextView
            android:id="@+id/meal_carbons_text"
            android:layout_marginTop="10dp"
            android:text="@string/carbon"
            style="@style/Macros"/>

        <EditText
            android:id="@+id/meal_carbons"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"

            android:ems="10"
            android:inputType="number"
            android:importantForAutofill="no"

            android:hint="@string/default_value"
            style="@style/Input_Text"/>

        <TextView
        android:id="@+id/meal_fats_text"
        android:layout_marginTop="10dp"
        android:text="@string/fat"
            style="@style/Macros"/>

        <EditText
            android:id="@+id/meal_fats"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"

            android:ems="10"
            android:inputType="number"
            android:importantForAutofill="no"

            android:hint="@string/default_value"
            style="@style/Input_Text"/>

        <TextView
            android:id="@+id/meal_fluids_text"
            android:layout_marginTop="10dp"
            android:text="@string/fluids"
            style="@style/Macros"/>

        <EditText
            android:id="@+id/meal_fluids"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"

            android:ems="10"
            android:inputType="number"
            android:importantForAutofill="no"

            android:hint="@string/default_value"
            style="@style/Input_Text"/>

        <Button
            android:id="@+id/meal_add_button"
            android:layout_marginTop="30dp"
            android:onClick="addMeal"
            android:text="@string/add_meal_add_button"
            style="@style/Button" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>