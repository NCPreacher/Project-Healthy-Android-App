<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Linear_layout">

        <TextView
            android:id="@+id/app_name_text"
            android:layout_marginTop="80dp"
            android:text="@string/app_name"
            style="@style/Title" />

        <TextView
            android:id="@+id/registration"
            android:text="@string/registration_text"
            style="@style/Text" />

        <TextView
            android:id="@+id/register_warrning_text"
            android:layout_marginTop="60dp"
            android:text="@string/register_error_text"
            style="@style/Warning_Text"/>

        <TextView
            android:id="@+id/login_username"
            android:layout_marginTop="20dp"
            android:text="@string/login_username_text"
            style="@style/Text"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="200dp"
            android:layout_height="40dp"

            android:ems="10"
            android:inputType="textPersonName"

            style="@style/Input_Text"
            android:autofillHints="" />

        <TextView
            android:id="@+id/login_password"
            android:layout_marginTop="5dp"
            android:text="@string/login_password_text"
            style="@style/Text"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="40dp"

            android:ems="10"
            android:inputType="textPassword"

            style="@style/Input_Text"
            android:autofillHints="" />

        <Button
            android:id="@+id/register_button"
            android:layout_marginTop="30dp"
            android:onClick="register"
            android:text="@string/register_button_text"
            style="@style/Button"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>