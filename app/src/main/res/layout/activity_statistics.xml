<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".layout.StatisticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/Linear_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/Linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/calories_info"
                    style="@style/Text"
                    android:paddingBottom="10dp"
                    android:text="@string/calories" />

                <ProgressBar
                    android:id="@+id/calories_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:progress="67"
                    android:progressDrawable="@drawable/progressbar_circle" />

                <TextView
                    android:id="@+id/calories_percentage"
                    style="@style/Text"
                    android:layout_marginTop="-65dp" />

                <TextView
                    android:id="@+id/calories_progress"
                    style="@style/Text"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-40dp" />

            </LinearLayout>

            <LinearLayout
                style="@style/Linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp">

                <TextView
                    android:id="@+id/proteins_info"
                    style="@style/Text"
                    android:paddingBottom="10dp"
                    android:text="@string/proteins" />

                <ProgressBar
                    android:id="@+id/proteins_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:progress="67"
                    android:progressDrawable="@drawable/progressbar_circle" />

                <TextView
                    android:id="@+id/proteins_percentage"
                    style="@style/Text"
                    android:layout_marginTop="-65dp" />

                <TextView
                    android:id="@+id/proteins_progress"
                    style="@style/Text"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-40dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/Linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/carbons_info"
                    style="@style/Text"
                    android:paddingBottom="10dp"
                    android:text="@string/carbon" />

                <ProgressBar
                    android:id="@+id/carbons_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:progress="67"
                    android:progressDrawable="@drawable/progressbar_circle" />

                <TextView
                    android:id="@+id/carbons_percentage"
                    style="@style/Text"
                    android:layout_marginTop="-65dp" />

                <TextView
                    android:id="@+id/carbons_progress"
                    style="@style/Text"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-40dp" />

            </LinearLayout>

            <LinearLayout
                style="@style/Linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp">

                <TextView
                    android:id="@+id/fats_info"
                    style="@style/Text"
                    android:paddingBottom="10dp"
                    android:text="@string/fat" />

                <ProgressBar
                    android:id="@+id/fats_progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:progress="67"
                    android:progressDrawable="@drawable/progressbar_circle" />

                <TextView
                    android:id="@+id/fats_percentage"
                    style="@style/Text"
                    android:layout_marginTop="-65dp" />

                <TextView
                    android:id="@+id/fats_progress"
                    style="@style/Text"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="-40dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/fluids_info"
            style="@style/Text"
            android:layout_marginTop="40dp"
            android:text="@string/fluids" />

        <ProgressBar
            android:id="@+id/fluids_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/progressbar_line"
            android:progress="50" />

        <TextView
            android:id="@+id/fluids_progress"
            style="@style/Text"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>